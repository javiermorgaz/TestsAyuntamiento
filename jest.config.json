{
    "testEnvironment": "jsdom",
    "transform": {},
    "setupFiles": [
        "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1",
        "^@core/(.*)$": "<rootDir>/src/core/$1",
        "^@services/(.*)$": "<rootDir>/src/services/$1",
        "^@ui/(.*)$": "<rootDir>/src/ui/$1",
        "^@config/(.*)$": "<rootDir>/src/config/$1"
    },
    "testPathIgnorePatterns": [
        "/node_modules/",
        "/tests/e2e/"
    ]
}